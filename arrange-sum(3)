inp = input('enter your string: ')
new=''
c1=0
c2=0
c3=0
for i in range(0,len(inp)):
    if inp[i]=='1':
        c1=c1+1
    elif inp[i]=='2':
        c2=c2+1
    elif inp[i]=='3':
        c3=c3+1

for i in range(0,c1):
    new = '1+'
    print(new,end='')
for i in range(0,c2):
    new = '2+'
    print('2+',end='')
for i in range(0,(c3)):
    new = '3+'
    print('3+',end='')

print(new.replace('+',''))
